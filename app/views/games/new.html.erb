<h1> New Game </h1>

<div class="cards">

<% @letters.each do |letter| %>
<div class=card>
<%= letter %>
</div>
<% end %>
</div>

<h3>  What's the longest word can you find? </h3>

<form action="/score" method="post">
  <input class="userinput" type="text" name="userinput" placeholder="What's the longest word?">
  <input type="submit" value="enter">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>

<%= link_to "try again?", new_path %>
